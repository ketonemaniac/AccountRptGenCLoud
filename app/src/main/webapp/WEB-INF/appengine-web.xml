    <!-- see https://github.com/GoogleCloudPlatform/getting-started-java/tree/master/appengine-standard-java8/springboot-appengine-standard -->

<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <version>1</version>
    <threadsafe>true</threadsafe>
    <runtime>java8</runtime>
    <sessions-enabled>true</sessions-enabled>
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/classes/logging.properties"/>
        <!-- switch between environments -->
        <!-- staging -->
        <property name="spring.profiles.active" value="staging,gCloudStandard" />
        <!-- prod -->
        <!-- property name="spring.profiles.active" value="prod,gCloudStandard" / -->
    </system-properties>
    <basic-scaling>
        <max-instances>1</max-instances>
        <!-- idle-timeout>5m</idle-timeout -->
    </basic-scaling>
</appengine-web-app>
